    %% User connections
    GU --> CHAT
    GU --> LEARN
    GU --> NEWS
    
    CE --> CHAT
    CE --> SWITCH
    CE --> MARKET
    CE --> NEWS
    
    DEV --> EMBED
    DEV --> API
    DEV --> ANALYTICS
    
    ADMIN --> TRAIN
    ADMIN --> CONFIG
    ADMIN --> MONITOR
    ADMIN --> DEPLOY
    ADMIN --> BACKUP
    ADMIN --> SECURITY

